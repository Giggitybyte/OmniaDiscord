<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>OmniaDiscord</RootNamespace>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <StartupObject>Sub Main</StartupObject>
    <Version>1.0.0.0</Version>
    <Authors>thegiggitybyte</Authors>
    <Company>N/A</Company>
    <Description>The swiss army knife of Discord bots.</Description>
    <PackageProjectUrl>https://github.com/Giggitybyte/OmniaDiscord</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/Giggitybyte/OmniaDiscord/blob/master/LICENSE</PackageLicenseUrl>
    <RepositoryUrl>https://github.com/Giggitybyte/OmniaDiscord/tree/master</RepositoryUrl>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DSharpPlus" Version="4.0.0-nightly-00562" />
    <PackageReference Include="DSharpPlus.CommandsNext" Version="4.0.0-nightly-00562" />
    <PackageReference Include="DSharpPlus.Interactivity" Version="4.0.0-nightly-00562" />
    <PackageReference Include="DSharpPlus.Lavalink" Version="4.0.0-nightly-00562" />
    <PackageReference Include="FluentCommandLineParser.NETStandard" Version="1.5.0.31-commands" />
    <PackageReference Include="LiteDB" Version="4.1.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Overstarch\Overstarch\Overstarch.vbproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
